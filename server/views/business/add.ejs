<%- include ../partials/main_nav.ejs %>

<!-- content for add page -->
<div class ="container">
    <div class="row">
        <div class = "offset-md-3 col-md 6">
            <h1><%=title%></h1>
            <form class="form" method="POST">
                <div class="fore-group">
                    <label form="nameTextField"> Full Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Contact's Full Name" name="contactname" required>
                </div>
                <div class="fore-group">
                    <label form="emailTextField"> Email</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter Contact's Email" name="email" required>
                </div>
                <div class="fore-group">
                    <label form="phoneTextField"> Phone Number</label>
                    <input type="text" class="form-control" id="phoneTextField" placeholder="Enter Contact's Phone number" name="phone" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>
                    <a href="/business_contacts" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel
                    </a>
            </form>
        </div>
    </div>
</div>
<%- include ../partials/footer.ejs %>